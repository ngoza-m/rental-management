<%= simple_form_for [:landlord, @property] do |f| %>

    <% if @property.errors.any? %>
        <div id="error_explanation" class="error-message">
        <p>Oops! Something went wrong!</p>
        </div>
    <% end %>

    <div>
    <%#= f.label :name %>
    <%= f.input :name %>
    </div>
    
    <div>
    <%#= f.label :address %>
    <%= f.input :address %>
    </div>
    
    <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>

    <div>
    <%#= f.label :rent %>
    <%= f.input :rent %>
    </div>

    <div>
    <%= f.submit %>
    </div>
<% end %>